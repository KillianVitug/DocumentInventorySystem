<%- include('layout/header') %>
<div class="container">
  <div class="row my-4">
    <div class="col-lg-12">
      <% if (message) { %>
      <div
        class="alert alert-dismissable fade show alert-<%= message.type %>"
        role="alert"
      >
        <button
          class="btn-close"
          type="button"
          data-bs-dismiss="alert"
          aria-lable="close"
        ></button>
        <strong><%= message.message %></strong>
      </div>
      <% } %>
      <div class="table-responsive">
        <% if (documents != '') { %>
        <table class="table table-striped text-center my-2">
          <thead>
            <tr class="table-dark">
              <th>ID</th>
              <th>Type</th>
              <th>Name</th>
              <th>Description</th>
              <th>Company</th>
              <th>UploadedAt</th>
              <th>Download Image</th>
              <th>Action</th>
            </tr>
          </thead>
          <tbody>
            <% documents.forEach((row, index) => { %>
            <tr class="align-middle">
              <td><%= index %></td>
              <td><%= row.type %></td>
              <td><%= row.name %></td>
              <td><%= row.description %></td>
              <td><%= row.company %></td>
              <td><%= row.uploadedAt %></td>
              <td>
                <img
                  src="<%= row.imageUrl %>"
                  width="50"
                  class="img-thumbnail"
                />
              </td>
              <td>
                <a href="/viewDocumentPage/<%= row.id %>" class="text-success"
                  >View</a
                >
              </td>
            </tr>
            <% }) %>
          </tbody>
        </table>
        <% } else {%>
        <h1 class="text-center text-secondary mt-5">No Documents Found!</h1>
        <% } %>
      </div>
    </div>
  </div>
</div>
<%- include('layout/footer') %>
