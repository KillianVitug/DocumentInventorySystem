<%- include('layout/header') %>
<div class="container">
  <div class="row my-4">
    <div class="col-lg-12">
      <% if (message) { %>
      <div
        class="alert alert-dismissable fade show alert-<%= message.type %>"
        role="alert"
      >
        <button
          class="btn-close"
          type="button"
          data-bs-dismiss="alert"
          aria-label="close"
        ></button>
        <strong><%= message.message %></strong>
      </div>
      <% } %>
      <div class="table-responsive">
        <% if (documents && documents.length > 0) { %>
        <table class="table table-striped text-center my-2">
          <thead>
            <tr class="table-dark">
              <th>ID</th>
              <th>Type</th>
              <th>Name</th>
              <th>Description</th>
              <th>Company</th>
              <th>UploadedAt</th>
              <th>Download Image</th>
              <th>Action</th>
            </tr>
          </thead>
          <tbody>
            <% documents.forEach(function(doc, index) { %>
            <tr>
              <td><%= index %></td>
              <td><%= doc.type %></td>
              <td><%= doc.name %></td>
              <td><%= doc.description %></td>
              <td><%= doc.company %></td>
              <td>
                <%= new Date(doc.uploadedAt).toLocaleString('en-US', { timeZone:
                'Asia/Manila', weekday: 'short', year: 'numeric', month:
                'short', day: 'numeric', hour: '2-digit', minute: '2-digit',
                second: '2-digit', hour12: true, }) %>
              </td>
              <td>
                <a href="/downloadPdf/<%= doc._id %>" class="btn btn-primary"
                  >Download PDF</a
                >
              </td>
              <td>
                <a
                  href="/viewDocumentPage/<%= doc._id %>"
                  class="btn btn-success"
                  >View Document</a
                >
              </td>
            </tr>
            <% }) %>
          </tbody>
        </table>
        <% } else {%>
        <h1 class="text-center text-secondary mt-5">No Documents Found!</h1>
        <% } %>
      </div>
    </div>
  </div>
</div>
<%- include('layout/footer') %>
