<%- include('layout/header') %>
<div class="container">
  <div class="row my-4">
    <div class="col-lg-12">
      <% if (message) { %>
      <div
        class="alert alert-dismissable fade show alert-<%= message.type %>"
        role="alert"
      >
        <button
          class="btn-close"
          type="button"
          data-bs-dismiss="alert"
          aria-label="close"
        ></button>
        <strong><%= message.message %></strong>
      </div>
      <% } %>
      <div class="table-responsive">
        <% if (document) { %>
        <table class="table table-striped text-center my-2">
          <thead>
            <tr class="table-dark">
              <th>ID</th>
              <th>Type</th>
              <th>Name</th>
              <th>Description</th>
              <th>Company</th>
              <th>UploadedAt</th>
              <th>Image</th>
              <th>Action</th>
            </tr>
          </thead>
          <tbody>
            <tr class="align-middle">
              <td><%= document._id %></td>
              <td><%= document.type %></td>
              <td><%= document.name %></td>
              <td><%= document.description %></td>
              <td><%= document.company %></td>
              <td><%= document.uploadedAt %></td>
              <td>
                <img
                  src="<%= document.imageUrl %>"
                  width="50"
                  class="img-thumbnail"
                />
              </td>
              <td>
                <a
                  href="/editDocumentPage/<%= document._id %>"
                  class="text-success"
                >
                  <i class="fas fa-edit fa-lg mx-1"></i>
                </a>
                <a
                  href="/deleteDocumentPage/<%= document._id %>"
                  class="text-danger"
                >
                  <i class="fas fa-edit fa-lg mx-1"></i>
                </a>
              </td>
            </tr>
          </tbody>
        </table>
        <% } else { %>
        <h1 class="text-center text-secondary mt-5">No Document Found!</h1>
        <% } %>
      </div>
    </div>
  </div>
</div>
<%- include('layout/footer') %>
